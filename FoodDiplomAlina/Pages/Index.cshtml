@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Блог о еде</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        /* Общие стили */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: #f6f6f6;
        }

        .dashboard {
            display: flex;
            height: 100vh;
        }

        /* Левое меню */
        .sidebar {
            width: 250px;
            background: #fff;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

            .sidebar h2 {
                font-size: 20px;
                margin-bottom: 20px;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

            .sidebar li {
                padding: 10px;
                cursor: pointer;
                display: flex;
                align-items: center;
            }

                .sidebar li i {
                    margin-right: 10px;
                }

            .sidebar .active {
                background: #ffcc00;
                border-radius: 5px;
            }

        /* Основной контент */
        .content {
            flex: 1;
            padding: 20px;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .search-bar {
            display: flex;
        }

            .search-bar input {
                padding: 8px;
                border: 1px solid #ddd;
                border-radius: 5px;
            }

            .search-bar button {
                background: #ffcc00;
                border: none;
                padding: 8px;
                cursor: pointer;
            }

        /* Баннер */
        .banner {
            background: #ffcc00;
            padding: 20px;
            border-radius: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .banner img {
                width: 100px;
            }

        /* Категории */
        .categories {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

            .categories button {
                background: #ddd;
                border: none;
                padding: 10px;
                cursor: pointer;
                border-radius: 5px;
            }

            .categories .active {
                background: #ffcc00;
            }

        /* Посты */
        .posts-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-top: 20px;
        }

        .post {
            background: #fff;
            padding: 10px;
            border-radius: 10px;
            text-align: center;
            position: relative;
        }

            .post img {
                width: 100%;
                border-radius: 10px;
            }

            .post .add-btn {
                background: #ffcc00;
                border: none;
                padding: 10px;
                cursor: pointer;
                border-radius: 50%;
                font-size: 20px;
            }

        /* Правая панель */
        .right-panel {
            width: 250px;
            background: #fff;
            padding: 20px;
            box-shadow: -2px 0 5px rgba(0, 0, 0, 0.1);
        }

        .user-info {
            text-align: center;
        }

            .user-info img {
                width: 80px;
                border-radius: 50%;
            }

   
        .sidebar {
            width: 100%;
        }

        .posts-grid {
            grid-template-columns: 1fr;
        }

        }
    </style>
</head>
<body>

    <div class="dashboard">
        <!-- Левое меню -->
        <aside class="sidebar">
            <h2>Блог о еде</h2>
            <nav>
                <ul>
                    <li class="active"><i class="fa-solid fa-location-dot"></i> Места</li>
                    <li><i class="fa-solid fa-truck"></i> Доставка</li>
                    <li><i class="fa-solid fa-bookmark"></i> Сохранено</li>
                    <li><i class="fa-solid fa-envelope"></i> Сообщения</li>
                    <li><i class="fa-solid fa-clock-rotate-left"></i> История публикаций</li>
                    <li><i class="fa-solid fa-gear"></i> Настройки</li>
                </ul>
            </nav>
        </aside>

        <!-- Основной контент -->
        <main class="content">
            <header>
                <h1>Hello, Patricia</h1>
                <div class="search-bar">
                    <input type="text" placeholder="Поиск...">
                    <button><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
            </header>

            <!-- Баннер -->
            <section class="banner">
                <div class="banner-content">
                    <h2>Хотите разместить рекламу на нашем сайте?</h2>
                    <p>пишите на email по сотрудничеству</p>
                </div>
                <img src="https://i.imgur.com/LHZL8Nq.png" alt="Реклама">
            </section>

            <!-- Категории -->
            <section class="categories">
                <button class="active">Все</button>
                <button>Тесты</button>
                <button>Рецепты</button>
                <button>Популярно</button>
                <button>Сотрудничество</button>
            </section>

            <!-- Популярные посты -->
            <section class="popular-posts">
                <h2>Популярные посты</h2>
                <div class="posts-grid">
                    <div class="post">
                        <img src="https://i.imgur.com/Zz92Qtc.png" alt="Fish Burger">
                        <h3>Fish Burger</h3>
                        <p>НИК</p>
                        <div class="stars">★★★★★</div>
                        <button class="add-btn">+</button>
                    </div>
                    <div class="post popular">
                        <img src="https://i.imgur.com/s0yNFHs.png" alt="Beef Burger">
                        <span class="badge">Популярно</span>
                        <h3>Beef Burger</h3>
                        <p>НИК</p>
                        <div class="stars">★★★★★</div>
                        <button class="add-btn">+</button>
                    </div>
                    <div class="post">
                        <img src="https://i.imgur.com/TBfwDQj.png" alt="Cheese Burger">
                        <h3>Cheese Burger</h3>
                        <p>НИК</p>
                        <div class="stars">★★★★★</div>
                        <button class="add-btn">+</button>
                    </div>
                </div>
            </section>
        </main>

        <!-- Правая панель -->
        <aside class="right-panel">
            <div class="user-info">
                <img src="https://i.imgur.com/RpzrMRy.png" alt="User">
                <div class="account-info">
                    <h3>Ваш аккаунт</h3>
                    <div class="stats">
                        <div>
                            <span>Подписчики</span>
                            <strong>12,000</strong>
                        </div>
                        <div>
                            <span>Подписки</span>
                            <strong>12,000</strong>
                        </div>
                    </div>
                </div>
            </div>
        </aside>
    </div>

</body>
</html>