@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Блог о еде</title>
    <style>
        /* Основные стили */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: #f8f8f8;
        }

        /* Грид для всего дашборда */
        .dashboard {
            display: grid;
            grid-template-columns: 250px 1fr 200px;
            gap: 20px;
            padding: 20px;
        }

        /* Боковое меню */
        .sidebar {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
        }

        .sidebar h2 {
            font-size: 22px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar ul li {
            padding: 10px;
            cursor: pointer;
        }

        .sidebar ul .active {
            font-weight: bold;
        }

        /* Основной контент */
        .content {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        input {
            padding: 5px;
            width: 200px;
        }

        /* Категории */
        .categories {
            margin: 10px 0;
        }

        .categories button {
            padding: 5px 15px;
            margin-right: 5px;
            border: none;
            background: #eee;
            cursor: pointer;
        }

        .categories .active {
            background: orange;
            color: #fff;
        }

        /* Посты */
        .posts {
            display: flex;
            gap: 15px;
        }

        .post {
            background: #fff;
            padding: 10px;
            border-radius: 10px;
            text-align: center;
        }

        .post img {
            width: 100px;
            height: 100px;
        }

        .like-btn {
            background: none;
            border: none;
            font-size: 20px;
            cursor: pointer;
        }

        .like-btn.liked {
            color: red;
        }

        /* Боковая панель справа */
        .profile {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
        }
    </style>
</head>
<body>

    <div class="dashboard">
        <!-- Боковое меню -->
        <aside class="sidebar">
            <h2>Блог о еде</h2>
            <nav>
                <ul>
                    <li class="active">🏙️ Места</li>
                    <li>🚚 Доставка</li>
                    <li>⭐ Сохранено</li>
                    <li>💬 Сообщения</li>
                    <li>📜 История публикаций</li>
                    <li>⚙️ Настройки</li>
                </ul>
            </nav>
        </aside>

        <!-- Основной контент -->
        <main class="content">
            <header>
                <h1>Hello, Patricia</h1>
                <input type="text" placeholder="🔍 Поиск...">
            </header>

            <div class="promo">
                <p>Хотите разместить рекламу на нашем сайте?</p>
            </div>

            <!-- Категории -->
            <div class="categories">
                <button class="active">Все</button>
                <button>Тесты</button>
                <button>Рецепты</button>
                <button>Популярно</button>
                <button>Сотрудничество</button>
            </div>

            <!-- Популярные посты -->
            <h2>Популярные посты</h2>
            <div class="posts">
                <div class="post">
                    <img src="Images/food.png" alt="Fish Burger">
                    <h3>Fish Burger</h3>
                    <p>⭐ ⭐ ⭐ ⭐ ⭐</p>
                    <button class="like-btn">❤️</button>
                </div>
                <div class="post popular">
                    <img src="Images/food.png" alt="Cheese Burger">
                    <h3>Beef Burger</h3>
                    <p>⭐ ⭐ ⭐ ⭐ ⭐</p>
                    <button class="like-btn">❤️</button>
                </div>
                <div class="post">
                    <img src="Images/food.png" alt="Cheese Burger">
                    <h3>Cheese Burger</h3>
                    <p>⭐ ⭐ ⭐ ⭐ ⭐</p>
                    <button class="like-btn">❤️</button>
                </div>
            </div>
        </main>

        <!-- Боковая панель справа -->
        <aside class="profile">
            <h3>Ваш аккаунт</h3>
            <p>👥 Подписчики: <b>12 000</b></p>
            <p>📩 Подписки: <b>12 000</b></p>
        </aside>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // Лайки
            const likeButtons = document.querySelectorAll(".like-btn");
            likeButtons.forEach(button => {
                button.addEventListener("click", () => {
                    button.classList.toggle("liked");
                });
            });

            // Смена активной категории
            const categoryButtons = document.querySelectorAll(".categories button");
            categoryButtons.forEach(button => {
                button.addEventListener("click", () => {
                    categoryButtons.forEach(btn => btn.classList.remove("active"));
                    button.classList.add("active");
                });
            });
        });
    </script>
</body>
</html>
